{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["plugin:prettier/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "plugins": ["prettier"],
    "rules": {
        //"prettier": "error",
        "prettier/prettier": [
            "error",
            {},
            {
                "usePrettierrc": false
            }
        ],
        "max-len": ["error", { "code": 80, "tabWidth": 4 }],
        "dot-notation": "error",
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "camelcase": ["warn", { "properties": "always" }],
        "no-alert": "warn",
        "comma-dangle": ["error", "always-multiline"]
    }
}
